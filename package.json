{
  "name": "pythoncpp-debug",
  "displayName": "PythonCpp Debug",
  "version": "0.1.0",
  "publisher": "benjamin simmonds",
  "description": "Extension for starting the Python & Cpp debugger on the same process in VScode",
  "author": {
    "name": "Benjamin Simmonds",
    "email": "BenjaminSimmonds@student.ethz.ch"
  },
  "license": "MIT",
  "keywords": [
    "multi-root ready"
  ],
  "engines": {
    "vscode": "^1.49.0"
  },
  "categories": [
    "Debuggers"
  ],
  "private": true,
  "scripts": {
    "vscode:prepublish": "yarn run package-ext && yarn run package-web",
    "compile": "tsc -p ./",
    "lint": "eslint src --ext ts",
    "watch": "webpack --watch --devtool nosources-source-map --info-verbosity verbose --config ./build/extension.webpack.config.js",
    "watch2": "tsc -watch -p ./",
    "pretest": "yarn run compile && yarn run lint",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package",
    "publish": "vsce publish",
    "package-ext": "webpack --mode production --config ./build/extension.webpack.config.js",
    "compile-web": "webpack --devtool nosources-source-map --config ./build/web-extension.webpack.config.js",
    "watch-web": "webpack --watch --devtool nosources-source-map --info-verbosity verbose --config ./build/web-extension.webpack.config.js",
    "package-web": "webpack --mode production --config ./build/web-extension.webpack.config.js"
  },
  "enableProposedApi": true,
  "dependencies": {
    "await-notify": "1.0.1",
    "vscode-debugadapter": "^1.45.0"
  },
  "devDependencies": {
    "@types/vscode": "^1.49.0",
    "@types/glob": "^7.1.3",
    "@types/mocha": "^8.0.0",
    "@types/node": "^14.0.27",
    "eslint": "^7.6.0",
    "@typescript-eslint/eslint-plugin": "^3.8.0",
    "@typescript-eslint/parser": "^3.8.0",
    "glob": "^7.1.6",
    "mocha": "^8.0.1",
    "typescript": "^3.8.3",
    "vscode-debugadapter-testsupport": "^1.45.0",
    "vsce": "^1.81.1",
    "ts-loader": "^8.0.3",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12"
  },
  "main": "./dist/ext/extension.js",
  "browser": "./dist/web/extension.js",
  "activationEvents": [
    "onLanguage:python",
    "onDebugResolve:pythoncpp",
    "onCommand:extension.pythonCpp-debug.runEditorContents",
    "onCommand:extension.pythonCpp-debug.debugEditorContents"
  ],
  "contributes": {
    "menus": {
      "editor/title/run": [
        {
          "command": "extension.pythonCpp-debug.runEditorContents",
          "when": "resourceLangId == python"
        },
        {
          "command": "extension.pythonCpp-debug.debugEditorContents",
          "when": "resourceLangId == python"
        }
      ],
      "commandPalette": [
				{
					"command": "extension.pythonCpp-debug.debugEditorContents",
					"when": "resourceLangId == python"
				},
				{
					"command": "extension.pythonCpp-debug.runEditorContents",
					"when": "resourceLangId == python"
				}
			],
      "debug/variables/context": [
        {
          "command": "extension.pythonCpp-debug.toggleFormatting",
          "when": "debugType == 'pythoncpp' && debugProtocolVariableMenuContext == 'simple'"
        }
      ]
    },
    "commands": [
      {
        "command": "extension.pythonCpp-debug.debugEditorContents",
        "title": "Debug File",
        "category": "PythonCpp Debug",
				"enablement": "!inDebugMode",
        "icon": "$(debug-alt)"
      },
      {
        "command": "extension.pythonCpp-debug.runEditorContents",
        "title": "Run File",
        "category": "PythonCpp Debug",
				"enablement": "!inDebugMode",
        "icon": "$(play)"
      }
    ],
    "breakpoints": [
      {
        "language": "python"
      },
      {
        "language": "python"
      }
    ],
    "debuggers": [
      {
        "type": "pythoncpp",
        "label": "PythonCpp Debug",
        "program": "./out/debugAdapter.js",
        "runtime": "node",
        "configurationAttributes": {
          "launch": {
            "required": [
              "pythonLaunchName",
              "cppAttachName"
            ],
            "properties": {
              "pythonLaunchName": {
                "type": "string",
                "description": "The name of your python launch config",
                "default": "Python: Current File"
              },
              "cppAttachName": {
                "type": "string",
                "description": "The name of your cpp attach config",
                "default": "(Windows) Attach"
              }
            }
          }
        },
        "initialConfigurations": [
          {
            "type": "pythoncpp",
            "pythonLaunchName": "Python: Current File",
            "cppAttachName": "(Windows) Attach"
          }
        ],
        "configurationSnippets": [
          {
            "label": "PythonCpp Debug: Launch",
            "body": {
              "name": "PythonCpp Debug",
              "type": "pythoncpp",
              "request": "launch",
              "pythonLaunchName": "Python: Current File",
              "cppAttachName": "(Windows) Attach"
            }
          }
        ]
      }
    ]
  }
}
